        "org.freedesktop.Sdk.Extension.openjdk11"
    ],
    "rename-icon": "arduino",
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=all",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/info",
        "/bin/usbhid-dump",
        "/share/man"
    ],
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/openjdk11/install.sh"
            ]
        },
        "shared-modules/libusb/libusb.json",
        {
            "name": "usbutils",
            "config-opts": [
                "--datadir=/app/share/hwdata",
                "--sbindir=/app/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/gregkh/usbutils.git",
                    "tag": "v012",
                    "commit": "f3a05e2e368cf17f9882c8d358f2fa205eb1ead6"
                }

            ]
        },
